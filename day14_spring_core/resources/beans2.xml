<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Definition for textEditor bean using constructor based DI -->
	<bean id="textEditor" class="com.app.simple2.TextEditor" autowire="byName" />

	<!-- Definition for spellChecker bean -->
	<bean id="basic" class="com.app.simple2.BasicSpellChecker" />

	<bean id="adv" class="com.app.simple2.AdvSpellChecker" />



</beans>
